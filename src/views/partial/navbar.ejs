<nav class="bg-gray-800 relative z-10">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                <button
                    type="button"
                    class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                    aria-controls="mobile-menu"
                    aria-expanded="false"
                >
                    <span class="sr-only">Open main menu</span>
                    <svg
                        class="block h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                    <svg
                        class="hidden h-6 w-6"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex flex-shrink-0 items-center">
                    <img
                        class="block h-8 w-auto lg:hidden"
                        src="https://cdn.vatgia.com/pictures/fullsize/2021/04/23/1619193161-qkc.png"
                        alt="Your Company"
                    />
                    <img
                        class="hidden h-8 w-auto lg:block"
                        src="https://cdn.vatgia.com/pictures/fullsize/2021/04/23/1619193161-qkc.png"
                        alt="Your Company"
                    />
                </div>
                <div class="hidden sm:ml-6 sm:block">
                    <div class="flex space-x-4">
                        <a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" id="home-link"
                            >Home</a
                        >

                        <a
                            href="/nations"
                            class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                            id="nations-link"
                            >Nations</a
                        >

                        <a
                            href="/players"
                            class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                            id="players-link"
                            >Players</a
                        >

                        <% if (isLogin && user.isAdmin) { %>
                        <a
                            href="/accounts"
                            class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                            id="players-link"
                            >Users</a
                        >
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="relative ml-3">
                <div class="flex gap-4 items-center">
                    <% if (isLogin) { %>
                    <p class="text-white text-base text-lg"><%= user.name%></p>
                    <button
                        type="button"
                        class="flex rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
                        id="user-menu-button"
                        aria-expanded="false"
                        aria-haspopup="true"
                    >
                        <span class="sr-only">Open user menu</span>
                        <img
                            class="h-8 w-8 rounded-full"
                            src="https://ui-avatars.com/api/?name=<%=user.name%>&background=0D8ABC&color=fff&size=32"
                            alt=""
                        />
                    </button>
                    <% } else { %>
                    <a href="/auth/login" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Login</a>
                    <% } %>
                </div>

                <div
                    class="absolute hidden right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                    role="menu"
                    id="profile"
                    aria-orientation="vertical"
                    aria-labelledby="user-menu-button"
                    tabindex="-1"
                >
                    <!-- Active: "bg-gray-100", Not Active: "" -->
                    <a href="/user/me" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-0"
                        >Your Profile</a
                    >
                    <a href="/user/change-password" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-0"
                        >Change Password</a
                    >
                    <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2"
                        >Sign out</a
                    >
                </div>
            </div>
        </div>
    </div>
</nav>
<script>
    $(document).ready(function () {
        let path = window.location.pathname;
        switch (path) {
            case "/nations":
                setCurrentLink("#nations-link");
                break;
            case "/players":
                setCurrentLink("#players-link");
                break;
            case "/":
                setCurrentLink("#home-link");
                break;
        }
    });

    $(document).on("click", "#user-menu-button", function () {
        $("#profile").toggle().toggleClass("hidden");
    });

    const setCurrentLink = (id) => {
        $(id).removeClass("text-gray-300 hover:bg-gray-700 hover:text-white");
        $(id).addClass("bg-gray-900 text-white");
    };
</script>
